<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="large_bold_text">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="regular_bold_text">
        <item name="android:textSize">@dimen/regular_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="small_text">
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="regular_button">
        <item name="android:background">@drawable/button</item>
        <item name="android:textSize">@dimen/regular_text</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="title_text">
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
