<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wamel.beaconear">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AppManagerActivity"
            android:label="@string/title_activity_app_manager"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.TypeFormActivity"
            android:label="@string/title_activity_new_type"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.BeaconSearchActivity"
            android:label="@string/title_activity_beacon_search"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.RegisteredBeaconsActivity"
            android:label="@string/title_activity_registered_beacons"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.ApplicationFormActivity"
            android:label="@string/title_activity_new_app"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.ApplicationsActivity"
            android:label="@string/title_activity_applications"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.AppTypesActivity"
            android:label="@string/title_activity_app_types"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
